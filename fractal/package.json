{
  "name": "fractal",
  "version": "1.0.0",
  "description": "Note: Please ensure you have installed nodejs",
  "scripts": {
    "clean": "rimraf _site",
    "build:eleventy": "eleventy",
    "build:images": "node convert-images.js",
    "build:parcel": "cross-env NODE_ENV=development parcel build _site/*.html --dist-dir ./build --no-optimize",
    "build": "npm-run-all clean build:eleventy build:parcel",
    "start:eleventy": "npm-run-all clean --parallel eleventy:watch",
    "eleventy:watch": "eleventy --watch",
    "start:images": "node convert-images.js --watch",
    "start:parcel": "parcel _site/*.html --no-cache",
    "start": "concurrently \"npm run start:eleventy\" \"npm run start:parcel\""
  },
  "targets": {
    "default": {
      "distDir": "build",
      "publicUrl": "./",
      "includeNodeModules": false,
      "sourceMap": false,
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "outputFormat": "esmodule",
      "optimize": true
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@parcel/plugin": "^2.8.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.12.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.41",
    "posthtml": "^0.16.6",
    "posthtml-webp": "^2.2.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.10"
  },
  "keywords": [],
  "dependencies": {
    "bootstrap": "^5.3.3"
  }
}
